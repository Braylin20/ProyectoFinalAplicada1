@page "/IndexDemanda"

@rendermode InteractiveAuto
@inject DemandaServices demandaServices

<div class="card shadow-lg">
    <div class="card-header" style="background-color: #012E40">
        <h3 class="text-white text-center">Index</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <label>Filtrar Por</label>
                <InputSelect @bind-Value="Opcion" class="form-select">
                    <option value="1">DemandaId</option>
                    <option value="2">Fecha</option>
                    <option value="4">Todo</option>
                </InputSelect>
            </div>
            <div class="justify-content-end d-flex mb-4">
                <a href="CreateAudiencia" class="btn btn-success bi-floppy-fill">Create</a>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="table-head text-white" style="background-color: #012E40">DemandaID</th>
                        <th class="table-head text-white" style="background-color: #012E40">Fecha</th>
                        <th class="table-head text-white" style="background-color: #012E40">Descripci&oacute;n</th>
                        <th class="table-head text-white" style="background-color: #012E40">Opci&oacute;nes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ListaDemandas)
                    {
                        <tr>
                            <td>@item.DemandaId</td>
                            <td>@item.Fecha</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <a href="/DeleteDemanda/@item.DemandaId" class="btn btn-danger bi bi-trash-fill"></a>
                                <a href="/EditDemanda/@item.DemandaId" class="btn btn-primary bi-box-arrow-up-right"></a>
                                <a href="/ViewDemanda/@item.DemandaId" class="btn btn-warning bi bi-info-square"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    public Audiencias Audiencias { get; set; } = new Audiencias();
    public List<Demandas>? ListaDemandas = new List<Demandas>();
    public int Opcion { get; set; }
    public Demandas? demandas = new Demandas();

    protected override async Task OnInitializedAsync()
    {
        ListaDemandas = await demandaServices.GetDemandas();

    }


}
